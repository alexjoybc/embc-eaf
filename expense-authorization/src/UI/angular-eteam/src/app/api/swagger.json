  "paths": {
    "/api/Lookup/ExpenditureAuthorizationResourceTypes": {
      "get": {
        "tags": [
          "Lookup"
        ],
        "summary": "Gets the asynchronous.",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LookupValue"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    },
    "/api/Lookup/{lookupType}": {
      "get": {
        "tags": [
          "Lookup"
        ],
        "summary": "",
        "parameters": [
          {
            "name": "lookupType",
            "in": "path",
            "description": "",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/LookupType"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
